# Server Configuration
PORT=3001

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/landledger

# Blockchain - Ethereum (Sepolia Testnet)
# Get RPC URL from Alchemy/Infura
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# Private key of the account that will mint NFTs (The Relayer)
RELAYER_PRIVATE_KEY=0xYOUR_PRIVATE_KEY
# Deployed LandNFT Contract Address
NFT_CONTRACT_ADDRESS=0xYOUR_DEPLOYED_CONTRACT_ADDRESS

# IPFS - Pinata Configuration
PINATA_JWT=your_pinata_jwt_token_here
PINATA_GATEWAY=gateway.pinata.cloud
